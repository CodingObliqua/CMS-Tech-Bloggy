<!-- views/comments/create.hbs -->
{{#extend "layouts/main"}}
  {{#content "body"}}
    <h1>Add a Comment</h1>
    <form method="POST" action="/comments/create">
      <textarea id="text" name="text" rows="4" required></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/content}}
{{/extend}}