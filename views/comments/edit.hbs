<!-- views/comments/edit.hbs -->
{{#extend "layouts/main"}}
  {{#content "body"}}
    <h1>Edit Comment</h1>
    <form method="POST" action="/comments/edit/{{comment.id}}">
      <textarea id="text" name="text" rows="4" required>{{comment.text}}</textarea>
      <button type="submit">Save Changes</button>
    </form>
  {{/content}}
{{/extend}}