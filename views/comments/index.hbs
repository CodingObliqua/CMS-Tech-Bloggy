    <h1>Comments</h1>
    <ul class="comment-list">
      {{#each comments}}
        {{> partials/comment}} <!-- Include the comment partial -->
      {{/each}}
    </ul>
    <a href="/comments/create">Add a Comment</a>
  {{/content}}
{{/extend}}