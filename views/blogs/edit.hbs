<!-- views/blogs/edit.hbs -->
{{#extend "layouts/main"}}
  {{#content "body"}}
    <h1>Edit Blog Post</h1>
    <form method="POST" action="/blogs/edit/{{blogPost.id}}">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{blogPost.title}}" required>
      <label for="content">Content</label>
      <textarea id="content" name="content" rows="4" required>{{blogPost.content}}</textarea>
      <button type="submit">Save Changes</button>
    </form>
  {{/content}}
{{/extend}}